/* pages/index/index.wxss */
page {
    font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}
.line {
    border-bottom: 1px solid #eee;
    margin-bottom: 10rpx;
}
.column {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.row {
    display: flex;
    flex-direction: column;
}
.timezone {
    margin: 10rpx;
}
.clock {
    margin: 10rpx;
}
.badge {
    display: inline-block;
    min-width: 20rpx;
    padding: 3px 7px;
    font-size: 12px;
    font-weight: 700;
    line-height: 1;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    background-color: #777;
    border-radius: 10rpx;
}
.flash {
    min-width: 10rpx;
    display: inline-block;
    animation: heartbeat 2s infinite;
}
.icon {
    display: inline-block;
    background-size: 48rpx 48rpx;
    width: 48rpx;
    height: 48rpx;
}
.trash {
    background-image: url(data:image/png;base64,);
}

.section {
    margin: 40rpx 10rpx;
}

.footer button {
    margin: 0 10rpx;
}

@keyframes heartbeat {
    from {
        opacity: 0;
    }
    50% {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}
